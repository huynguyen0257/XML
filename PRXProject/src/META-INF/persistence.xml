<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>huyng.entities.BrandEntity</class>
        <class>huyng.entities.LaptopEntity</class>
        <class>huyng.entities.ProcessorEntity</class>
        <class>huyng.entities.MonitorEntity</class>
        <class>huyng.entities.RamEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:sqlserver://localhost:1433;database=PRXProject"/>
            <property name="eclipselink.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="eclipselink.jdbc.user" value="sa"/>
            <property name="eclipselink.jdbc.password" value="yourStrong(!)Password"/>
        </properties>
    </persistence-unit>
</persistence>
